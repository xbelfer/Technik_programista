<Window x:Class="SzyfrCezaraApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SzyfrCezaraApp"
        mc:Ignorable="d"
        Title="Szyfrowanie. Wykonane przez 00000000000" 
        Height="450" Width="800"
        Background="#5F9EA0">
    <Window.Resources>
        <SolidColorBrush x:Key="KolorNaglowka" Color="#FAEBD7"/>
        <SolidColorBrush x:Key="KolorPrzycisku" Color="#ADD8E6"/>
        <SolidColorBrush x:Key="KolorTekstuWynikowego" Color="#F0F8FF"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Podaj wartość klucza" 
                   Grid.Row="0" Grid.Column="0" 
                   FontSize="20" FontWeight="Bold" 
                   Foreground="{StaticResource KolorNaglowka}" 
                   Margin="0,0,0,5"/>

        <TextBox x:Name="KluczTextBox" 
                 Grid.Row="1" Grid.Column="0" 
                 Width="80" HorizontalAlignment="Left" 
                 FontSize="16" Padding="5" 
                 Margin="0,0,0,15"/>

        <Label Content="Podaj tekst" 
                   Grid.Row="2" Grid.Column="0" 
                   FontSize="20" FontWeight="Bold" 
                   Foreground="{StaticResource KolorNaglowka}" 
                   Margin="0,0,0,5"/>

        <TextBox x:Name="TekstJawnyTextBox" 
                 Grid.Row="3" Grid.Column="0" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                 FontSize="14" Padding="5" 
                 BorderThickness="1" BorderBrush="Gray" 
                 Background="White" 
                 Margin="0,0,15,0"/>

        <Button x:Name="ZaszyfrujButton" 
                Content="Zaszyfruj" 
                Grid.Row="3" Grid.Column="1" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Padding="10,5" 
                Background="{StaticResource KolorPrzycisku}" 
                BorderBrush="Transparent" 
                BorderThickness="1" Margin="10,0" 
                Click="ZaszyfrujButton_Click">
            <Button.Effect>
                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.3"/>
            </Button.Effect>
        </Button>

        <Label Content="Tekst zaszyfrowany" 
                   Grid.Row="0" Grid.Column="2" 
                   FontSize="20" FontWeight="Bold" 
                   Foreground="{StaticResource KolorNaglowka}" 
                   Margin="15,0,0,5"/>

        <Border Grid.Row="3" Grid.Column="2" 
                CornerRadius="10" 
                BorderThickness="2" 
                BorderBrush="{StaticResource KolorNaglowka}"  
                Background="#5F9EA0"  Margin="15,0,0,15">

            <TextBlock x:Name="TekstZaszyfrowanyTextBlock" 
                       TextWrapping="Wrap" 
                       FontSize="16" Padding="10" 
                       VerticalAlignment="Top" 
                       Foreground="{StaticResource KolorTekstuWynikowego}" />
        </Border>

        <Button x:Name="ZapiszButton" 
                Content="Zapisz szyfr w pliku" 
                Grid.Row="4" Grid.Column="2" 
                HorizontalAlignment="Center" 
                Padding="15,8" 
                Background="{StaticResource KolorPrzycisku}" 
                BorderBrush="Transparent" 
                BorderThickness="1" 
                Click="ZapiszButton_Click"
                Margin="15,0,0,0"/>

    </Grid>
</Window>
