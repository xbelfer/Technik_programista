<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavigationRouting.Pages.CarDetailPage"
             Title="CarDetailPage"
             Shell.BackgroundColor="Blue"
             Shell.TitleColor="White"
             xmlns:pages="clr-namespace:NavigationRouting.Pages"
             x:DataType="pages:CarDetailPage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding CarDetail.Marka}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding CarDetail.Model}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding CarDetail.Cena}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding CarDetail.Przebieg}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image Source="{Binding CarDetail.Img}" HeightRequest="150"/>
    </VerticalStackLayout>
</ContentPage>