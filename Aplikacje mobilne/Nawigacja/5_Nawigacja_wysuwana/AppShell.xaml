<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_5_Nawigacja_wysuwana.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_5_Nawigacja_wysuwana.Pages"
    FlyoutIcon="galeria.png">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="DarkSlateBlue">
            <Image Source="main.png"/>
        </Grid>
    </Shell.FlyoutHeader>
    
    <FlyoutItem Title="Main" Icon="main.png">
        <ShellContent 
            ContentTemplate="{DataTemplate local:MainPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Galery" Icon="galery.png">
        <ShellContent 
            ContentTemplate="{DataTemplate local:Galery}"/>
    </FlyoutItem>

</Shell>
